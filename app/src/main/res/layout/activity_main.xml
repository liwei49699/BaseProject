<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_layout_anim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LayoutAnimation 布局动画，Java实现"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_layout_anim_xml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LayoutAnimation 布局动画,xml实现"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_layout_anim"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_customer_object_anim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="自定义属性动画"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_layout_anim"
        android:layout_marginTop="20dp"/>

    <com.person.liwei.widget.RoundImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@+id/btn_customer_object_anim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        app:roundAdius="8"
        android:src="@drawable/bg_red"/>


</android.support.constraint.ConstraintLayout>